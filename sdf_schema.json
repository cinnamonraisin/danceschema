{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "definitions" : {
        "DanceSection" : {
            "type" : "object",
            "title" : "dance moves section",
            "properties" : {
                "label": { "type": "string" },
                "elements": { "type": "array", "items": { "type": "string" } }
            }
        },

        "DanceTune" : {
            "type" : "object",
            "title" : "dance tune information",
            "properties" : {
                "title" : { "type": "string" },
                "author" : { "type": "string" },
                "key" : { "type": "string" },
                "meter" : { "type": "string" },
                "source" : { "type": "string" }
            }
        }
    },

    "type": "object",
    "title" : "dance schema",
    "description" : "JSON schema for a structured dance",

    "properties" : {
        "title" : { 
            "type": "string",
            "description": "The title of the dance"
        },
        "author" : { 
            "type": "string",
            "description": "Who wrote the dance, if known."
        },
        "genre" : {
            "type": "string",
            "description": "The dance genre, such as 'Contra Dance', or 'English Country Dance'."
        },
        "formation" : {
            "type": "string",
            "description": "Dance formation, such as 'Longways Duple Minor', etc."
        },

        "source" : { "type": "string" },
        "date" : { "type": "string" },
        "authors_notes": { "type": "string" },

        "moves": {
            "type": "array",
            "title": "dance moves",
            "description": "array of dance moves",
            "items": { "$ref": "#/definitions/DanceSection" }
        },

        "tune": {
            "title": "dance tune",
            "description": "tune data for dance",
            "type" : "object",
            "$ref": "#/definitions/DanceTune"
        }
    }
}